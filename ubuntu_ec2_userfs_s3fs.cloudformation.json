{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Create Linux EC2 with S3 bucket mounted in user space",
  "Parameters": {
    "bucketNameParam": {
      "Description": "The S3 bucket name",
      "Type": "String",
      "Default": "sample-bucket-name",
      "MinLength": "3",
      "MaxLength": "50",
      "AllowedPattern": "^[a-z0-9][a-z0-9.-]*"
    },
    "Ec2KeyNameParam": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance",
      "Type": "AWS::EC2::KeyPair::KeyName",
      "ConstraintDescription": "must be the name of an existing EC2 KeyPair."
    },
    "Ec2Group": {
      "Description": "EC2 Security Group",
      "Type": "AWS::EC2::SecurityGroup::Id",
      "ConstraintDescription": "SG for Ec2"
    },
    "Ec2Subnet": {
      "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance",
      "Type": "AWS::EC2::Subnet::Id",
      "ConstraintDescription": "subnet for the Ec2"
    },
    "InstanceType": {
      "Description": "WebServer EC2 instance type",
      "Type": "String",
      "Default": "t2.micro",
      "AllowedValues": [
        "t2.micro",
        "t2.small",
        "t2.medium",
        "m3.medium",
        "m3.large",
        "m3.xlarge",
        "m3.2xlarge",
        "c3.large",
        "c3.xlarge",
        "c3.2xlarge",
        "c3.4xlarge",
        "c3.8xlarge",
        "r3.large",
        "r3.xlarge",
        "r3.2xlarge",
        "r3.4xlarge",
        "r3.8xlarge",
        "i2.xlarge",
        "i2.2xlarge",
        "i2.4xlarge",
        "i2.8xlarge",
        "hi1.4xlarge",
        "hs1.8xlarge",
        "cr1.8xlarge",
        "cc2.8xlarge",
        "cg1.4xlarge"
      ],
      "ConstraintDescription": "Must be a valid EC2 instance type"
    }
  },
  "Mappings": {
    "AWSInstanceType2Arch": {
      "t1.micro": {
        "Arch": "PV64"
      },
      "t2.micro": {
        "Arch": "HVM64"
      },
      "t2.small": {
        "Arch": "HVM64"
      },
      "t2.medium": {
        "Arch": "HVM64"
      },
      "m1.small": {
        "Arch": "PV64"
      },
      "m1.medium": {
        "Arch": "PV64"
      },
      "m1.large": {
        "Arch": "PV64"
      },
      "m1.xlarge": {
        "Arch": "PV64"
      },
      "m2.xlarge": {
        "Arch": "PV64"
      },
      "m2.2xlarge": {
        "Arch": "PV64"
      },
      "m2.4xlarge": {
        "Arch": "PV64"
      },
      "m3.medium": {
        "Arch": "HVM64"
      },
      "m3.large": {
        "Arch": "HVM64"
      },
      "m3.xlarge": {
        "Arch": "HVM64"
      },
      "m3.2xlarge": {
        "Arch": "HVM64"
      },
      "c1.medium": {
        "Arch": "PV64"
      },
      "c1.xlarge": {
        "Arch": "PV64"
      },
      "c3.large": {
        "Arch": "HVM64"
      },
      "c3.xlarge": {
        "Arch": "HVM64"
      },
      "c3.2xlarge": {
        "Arch": "HVM64"
      },
      "c3.4xlarge": {
        "Arch": "HVM64"
      },
      "c3.8xlarge": {
        "Arch": "HVM64"
      },
      "g2.2xlarge": {
        "Arch": "HVMG2"
      },
      "r3.large": {
        "Arch": "HVM64"
      },
      "r3.xlarge": {
        "Arch": "HVM64"
      },
      "r3.2xlarge": {
        "Arch": "HVM64"
      },
      "r3.4xlarge": {
        "Arch": "HVM64"
      },
      "r3.8xlarge": {
        "Arch": "HVM64"
      },
      "i2.xlarge": {
        "Arch": "HVM64"
      },
      "i2.2xlarge": {
        "Arch": "HVM64"
      },
      "i2.4xlarge": {
        "Arch": "HVM64"
      },
      "i2.8xlarge": {
        "Arch": "HVM64"
      },
      "hi1.4xlarge": {
        "Arch": "HVM64"
      },
      "hs1.8xlarge": {
        "Arch": "HVM64"
      },
      "cr1.8xlarge": {
        "Arch": "HVM64"
      },
      "cc2.8xlarge": {
        "Arch": "HVM64"
      }
    },
    "AWSRegionArch2AMI": {
      "us-east-1": {
        "PV64": "ami-50842d38",
        "HVM64": "ami-08842d60",
        "HVMG2": "ami-3a329952"
      },
      "us-west-2": {
        "PV64": "ami-af86c69f",
        "HVM64": "ami-b7a114d7",
        "HVMG2": "ami-47296a77"
      },
      "us-west-1": {
        "PV64": "ami-c7a8a182",
        "HVM64": "ami-d8bdebb8",
        "HVMG2": "ami-331b1376"
      },
      "eu-west-1": {
        "PV64": "ami-aa8f28dd",
        "HVM64": "ami-748e2903",
        "HVMG2": "ami-00913777"
      },
      "ap-southeast-1": {
        "PV64": "ami-20e1c572",
        "HVM64": "ami-d6e1c584",
        "HVMG2": "ami-fabe9aa8"
      },
      "ap-northeast-1": {
        "PV64": "ami-21072820",
        "HVM64": "ami-35072834",
        "HVMG2": "ami-5dd1ff5c"
      },
      "ap-southeast-2": {
        "PV64": "ami-8b4724b1",
        "HVM64": "ami-fd4724c7",
        "HVMG2": "ami-e98ae9d3"
      },
      "sa-east-1": {
        "PV64": "ami-9d6cc680",
        "HVM64": "ami-956cc688",
        "HVMG2": "NOT_SUPPORTED"
      },
      "cn-north-1": {
        "PV64": "ami-a857c591",
        "HVM64": "ami-ac57c595",
        "HVMG2": "NOT_SUPPORTED"
      },
      "eu-central-1": {
        "PV64": "ami-a03503bd",
        "HVM64": "ami-b43503a9",
        "HVMG2": "ami-b03503ad"
      }
    }
  },
  "Outputs": {},
  "Resources": {
    "s3mountGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "GroupName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "AWS::StackName"
              },
              "-",
              "s3mountGroup"
            ]
          ]
        }
      }
    },
    "s3mountUser": {
      "Type": "AWS::IAM::User",
      "Properties": {
        "UserName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "AWS::StackName"
              },
              "-",
              "s3mountUser"
            ]
          ]
        }
      }
    },
    "addUserToGroup": {
      "Type": "AWS::IAM::UserToGroupAddition",
      "DependsOn": [
        "s3mountUser",
        "s3mountGroup"
      ],
      "Properties": {
        "GroupName": {
          "Ref": "s3mountGroup"
        },
        "Users": [
          {
            "Ref": "s3mountUser"
          }
        ]
      }
    },
    "S3BucketPolicy": {
      "Type": "AWS::S3::BucketPolicy",
      "DependsOn": [
        "s3mountGroup"
      ],
      "Properties": {
        "Bucket": {
          "Ref": "bucketNameParam"
        },
        "PolicyDocument": {
          "Id": "Policy1482110492680",
          "Version": "2012-10-17",
          "Statement": [
            {
              "Action": "s3:*",
              "Effect": "Allow",
              "Resource": {
                "Fn::Join": [
                  "",
                  [
                    "arn:aws:s3:::",
                    {
                      "Ref": "bucketNameParam"
                    }
                  ]
                ]
              },
              "Principal": {
                "AWS": [
                  {
                    "Fn::GetAtt": [
                      "s3mountUser",
                      "Arn"
                    ]
                  }
                ]
              }
            }
          ]
        }
      }
    },
    "s3mountUserKey": {
      "Type": "AWS::IAM::AccessKey",
      "DependsOn": [ "s3mountUser" ],
      "Properties": {
        "UserName": {
          "Ref": "s3mountUser"
        }
      }
    },
    "PythonEc2": {
      "Type": "AWS::EC2::Instance",
      "DependsOn": [ "s3mountUserKey", "S3BucketPolicy" ],
      "Properties": {
        "ImageId": {
          "Fn::FindInMap": [
            "AWSRegionArch2AMI",
            {
              "Ref": "AWS::Region"
            },
            {
              "Fn::FindInMap": [
                "AWSInstanceType2Arch",
                {
                  "Ref": "InstanceType"
                },
                "Arch"
              ]
            }
          ]
        },
        "InstanceType": {
          "Ref": "InstanceType"
        },
        "KeyName": {
          "Ref": "Ec2KeyNameParam"
        },
        "BlockDeviceMappings": [
          {
            "DeviceName": "/dev/sdm",
            "Ebs": {
              "VolumeType": "io1",
              "Iops": "200",
              "DeleteOnTermination": "false",
              "VolumeSize": "20"
            }
          }
        ],
        "NetworkInterfaces": [
          {
            "AssociatePublicIpAddress": "false",
            "DeviceIndex": "0",
            "GroupSet": [
              {
                "Ref": "Ec2Group"
              }
            ],
            "SubnetId": {
              "Ref": "Ec2Subnet"
            }
          }
        ],
        "UserData": {
          "Fn::Base64": {
            "Fn::Join": [
              "",
              [
                "#!/bin/bash -xe\n",
                "apt-get install -y build-essential git libfuse-dev libcurl4-openssl-dev libxml2-dev mime-support automake libtool pkg-config libssl-dev\n",
                "git clone https://github.com/s3fs-fuse/s3fs-fuse && ",
                "cd s3fs-fuse/ &&",
                "./autogen.sh &&",
                "./configure --prefix=/usr --with-openssl &&",
                "make &&",
                "make install\n",
                "sudo -u ubuntu mkdir /home/ubuntu/s3mount \n",
                "echo ",
                {
                  "Ref": "s3mountUserKey"
                },
                ":",
                {
                  "Fn::GetAtt": [
                    "s3mountUserKey",
                    "SecretAccessKey"
                  ]
                },
                "> /home/ubuntu/passwd-s3fs\n",
                "chown ubuntu:ubuntu /home/ubuntu/passwd-s3fs\n",
                "chmod 600 /home/ubuntu/passwd-s3fs\n",
                "sudo -u ubuntu s3fs ",
                {"Ref":"bucketNameParam"},
                " /home/ubuntu/s3mount -o passwd_file=/home/ubuntu/passwd-s3fs\n"
              ]
            ]
          }
        }
      }
    },
    "publicEc2EIP": {
      "Type": "AWS::EC2::EIP",
      "DependsOn": [ "PythonEc2" ],
      "Properties": {
        "InstanceId": {
          "Ref": "PythonEc2"
        }
      }
    }
  }
}
